#!/bin/rc

# Usage
#	wctl=`{wctl $wsys}

fn new {
	if(~ $1 -cd) {
		d=`{echo $2 | sed 's/-cd//'}
		cd $d
		shift 2
	}
	window -m $*
}

fn wctl {
	while (a=`{read})
		if (~ $a(1) new) $a
}

if(! ~ $1 '')
	wsys=$1
if(~ $wsys '')
	exit '$wsys not set'

service=wctl.$user
# we want to know the pid of the wctl rc,
# so we use the fd 3 to send it from the
# rc runned by srv to this process.
srvpid=`{
	srv -eq '
		echo $pid >[1=3]
		wctl
	' $service.$pid >[3=1] |
		read
}
mv /srv/$service.^($pid $srvpid) &&
	echo /srv/$service.$srvpid
